<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeckPage">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="30dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginTop="185dp"
            app:srcCompat="@drawable/material_symbols_keyboard_double_arrow_left" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/material_symbols_keyboard_double_arrow_right_sharp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:textColor="@color/black"
            android:text="1/3"
            android:textAlignment="textStart"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:text="Fundamentals of Mobile..."/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginLeft="280dp"
        app:srcCompat="@drawable/material_symbols_edit_document_outline" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbarSize="1dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="Add Card"
                android:background="@drawable/round_btn"
                android:drawableLeft="@drawable/vector"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/download"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_btn"
                android:text="Download"
                android:drawableLeft="@drawable/material_symbols_download_for_offline_outline"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_btn"
                android:backgroundTint="@color/gray"
                android:drawableLeft="@drawable/vector__1_"
                android:text="Share"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:id="@+id/learn"
                android:background="@drawable/round_btn"
                android:text="Learn"
                android:drawableLeft="@drawable/mdi_learn_outline"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/test"
                android:textAllCaps="false"
                android:background="@drawable/round_btn"
                android:layout_marginTop="20dp"
                android:text="Test"
                android:drawableLeft="@drawable/mdi_quiz_outline"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>


        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:text="Flashcards"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Android Studio"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="Official IDE for Android application"
            android:textAlignment="center"
            android:layout_marginTop="40dp"/>
    </androidx.cardview.widget.CardView>




</LinearLayout>