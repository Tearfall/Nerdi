<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AfterLearn">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="100dp" android:background="@color/dark_purple" android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Results"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Progress"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/easy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Easy"
                    android:textColor="@color/apple_green"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="1"
                    android:textColor="@color/apple_green"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/easy"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginBottom="10dp"
                    android:text="Hard"
                    android:textColor="@color/pale_reed"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/easy"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="0"
                    android:textColor="@color/pale_reed"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/notyerlearned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hard"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Not Yet Learned"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hard"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="0"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />


            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_restart"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray"
            android:background="@drawable/login_btn"
            android:drawableLeft="@drawable/material_symbols_restart_alt_rounded"
            android:text="Restart"
            android:textAllCaps="false">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_test"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/login_btn"
            android:backgroundTint="@color/gray"
            android:text="Test Yourself"
            android:textAllCaps="false"
            android:textSize="20dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/login_btn"
            android:backgroundTint="@color/gray"
            android:text="Home"
            android:textAllCaps="false"
            android:textSize="20dp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>